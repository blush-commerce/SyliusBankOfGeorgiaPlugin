<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
            id="gigamarr_sylius_bank_of_georgia_plugin.bank_of_georgia"
            class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder"
        >
            <argument>Gigamarr\SyliusBankOfGeorgiaPlugin\Payum\Factory\BankOfGeorgiaGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="bank_of_georgia" />
        </service>

        <service id="Gigamarr\SyliusBankOfGeorgiaPlugin\Payum\Action\AuthorizeAction" public="true">
            <argument type="service" id="sylius.http_client" />
            <tag name="payum.action" factory="bank_of_georgia" alias="payum.action.authorize" />
        </service>
    </services>
</container>